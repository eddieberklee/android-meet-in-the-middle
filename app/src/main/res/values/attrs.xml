<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fontface">
        <enum name="montserrat_hairline"   value="0"/>
        <enum name="montserrat_ultralight" value="1"/>
        <enum name="montserrat_light"      value="2"/>
        <enum name="montserrat_regular"    value="3"/>
        <enum name="montserrat_semibold"   value="4"/>
        <enum name="montserrat_bold"       value="5"/>
        <enum name="montserrat_extrabold"  value="6"/>
        <enum name="montserrat_black"      value="7"/>
    </attr>

    <attr name="emotion" format="enum">
        <enum name="happy" value="0"/>
        <enum name="sad" value="1"/>
        <enum name="shy" value="2"/>
        <enum name="angry" value="3"/>
        <enum name="astonished" value="4"/>
        <enum name="ecstatic" value="5"/>
    </attr>

    <declare-styleable name="FontTextView">
        <attr name="fontface"/>
    </declare-styleable>

    <declare-styleable name="FontEditText">
        <attr name="fontface"/>
        <attr name="color"/>
    </declare-styleable>

    <declare-styleable name="ColorImageView">
        <attr name="customColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CustomEmoticonView">
        <attr name="emotion" />
    </declare-styleable>

</resources>