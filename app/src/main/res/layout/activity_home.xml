<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.compscieddy.meetinthemiddle.FontTextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="\@username"
            android:textSize="20sp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/map_cardView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="100dp">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/status_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/map_cardView"
            android:layout_alignBottom="@id/map_cardView"
            android:layout_toRightOf="@id/map_cardView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>

        <com.compscieddy.meetinthemiddle.FontTextView
            android:id="@+id/new_group_button"
            style="@style/ButtonOutlineAccent"
            android:layout_width="@dimen/map_size"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map_cardView"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="@string/new_group"
            app:fontface="montserrat_semibold"/>

        <RelativeLayout
            android:id="@+id/bottom_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/new_group_button">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/group_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_group_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_plus_white_48dp"
        app:layout_anchor="@id/group_recycler_view"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>